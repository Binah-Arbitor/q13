<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android.layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/public_key_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Public Key" />
            
        <TextView
            android:id="@+id/public_key_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No public key selected" 
            android:padding="8dp"/>

        <Button
            android:id="@+id/private_key_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Private Key" />
            
        <TextView
            android:id="@+id/private_key_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No private key selected"
            android:padding="8dp" />

        <EditText
            android:id="@+id/passphrase_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Private Key Passphrase" />

        <CheckBox
            android:id="@+id/sign_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign the file"/>

        <Button
            android:id="@+id/file_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select File" />

        <TextView
            android:id="@+id/selected_file_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:padding="8dp"/>

        <Button
            android:id="@+id/encrypt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <ScrollView
            android:id="@+id/console_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="#f0f0f0">

            <TextView
                android:id="@+id/console_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="monospace"/>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>