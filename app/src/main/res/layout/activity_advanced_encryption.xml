
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".AdvancedEncryptionActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top: File Selection -->
            <Button
                android:id="@+id/select_file_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select File"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/selected_file_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/select_file_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Algorithm Type Switch -->
            <Switch
                android:id="@+id/algorithm_type_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symmetric / Asymmetric"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/selected_file_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Row 1: Algorithm / Key Length -->
            <TextView
                android:id="@+id/algorithm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Algorithm"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/algorithm_type_switch" />

            <Spinner
                android:id="@+id/algorithm_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/algorithm_label"
                app:layout_constraintEnd_toStartOf="@id/key_length_label"
                app:layout_constraintBaseline_toBaselineOf="@id/algorithm_label" />

            <TextView
                android:id="@+id/key_length_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Length"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/algorithm_spinner"
                app:layout_constraintBaseline_toBaselineOf="@id/algorithm_label" />

            <Spinner
                android:id="@+id/key_length_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/key_length_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/algorithm_label" />

            <!-- Row 2: Mode / Padding -->
            <TextView
                android:id="@+id/mode_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/algorithm_label" />

            <Spinner
                android:id="@+id/mode_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/mode_label"
                app:layout_constraintEnd_toStartOf="@id/padding_label"
                app:layout_constraintBaseline_toBaselineOf="@id/mode_label" />

            <TextView
                android:id="@+id/padding_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padding"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/mode_spinner"
                app:layout_constraintBaseline_toBaselineOf="@id/mode_label" />

            <Spinner
                android:id="@+id/padding_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/padding_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/mode_label" />

            <!-- Row 3: KDF -->
            <TextView
                android:id="@+id/kdf_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KDF"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mode_label" />

            <Spinner
                android:id="@+id/kdf_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/kdf_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/kdf_label" />

            <!-- Row 4: Password / Threads -->
            <TextView
                android:id="@+id/password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/kdf_label" />

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/password_label"
                app:layout_constraintEnd_toStartOf="@id/threads_label"
                app:layout_constraintBaseline_toBaselineOf="@id/password_label" />

            <TextView
                android:id="@+id/threads_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threads"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/password_edittext"
                app:layout_constraintBaseline_toBaselineOf="@id/password_label" />

            <Spinner
                android:id="@+id/threads_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/threads_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/password_label" />

            <!-- Private Key Output (Initially hidden) -->
            <EditText
                android:id="@+id/private_key_output"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Private Key will be generated here"
                android:minLines="3"
                android:gravity="top|start"
                android:background="#444444"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/password_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Bottom Layout -->
            <Button
                android:id="@+id/encrypt_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Encrypt"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/private_key_output" />

            <TextView
                android:id="@+id/console_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:text="Console waiting for output..."
                android:scrollbars="vertical"
                android:gravity="bottom"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/encrypt_button"
                app:layout_constraintBottom_toBottomOf="@id/encrypt_button"
                app:layout_constraintStart_toEndOf="@id/encrypt_button"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/nav_encrypt_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Encrypt" />

        <Button
            android:id="@+id/nav_decrypt_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decrypt" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
