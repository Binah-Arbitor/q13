<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:orientation="vertical"
        android:padding="16dp">

        <Spinner
            android:id="@+id/decryption_mode_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password / Passphrase" />

        <Button
            android:id="@+id/private_key_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Private Key" 
            android:visibility="gone"/>
            
        <TextView
            android:id="@+id/private_key_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No private key selected"
            android:padding="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/signer_public_key_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Signer's Public Key (Optional)" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/signer_public_key_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No signer key selected"
            android:padding="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/file_select_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select File to Decrypt" />

        <TextView
            android:id="@+id/selected_file_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:padding="8dp"/>
            
        <Button
            android:id="@+id/decrypt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android.layout_marginTop="8dp"/>

        <ScrollView
            android:id="@+id/console_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="#f0f0f0">

            <TextView
                android:id="@+id/console_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="monospace"/>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>